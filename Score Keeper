# Groove Donkey Score Keeper 3500

def get_valid_score():
    while True:
        user_input = input("Enter a score (0-100) or 'done' to finish: ").lower().strip()
        if user_input == "done":
            return "done"
        try:
            score = float(user_input)
            if 0 <= score <= 100:
                return score
            else:
                print("Invalid score. Please enter a number between 0 and 100.")
        except ValueError:
            print("Invalid input. Please enter a valid number or 'done'.")

def main():
    # Runs the program.
    scores = []
    # Loop to get scores from the user
    print("*", "=" * 48, "*")
    print("* Welcome to the Groove Donkey Score Tracker 3500! *")
    print("*", "=" * 48, "*")
    while True:
        score = get_valid_score()
        if score == "done":
            break
        scores.append(score)
    # Calculate and print the results
    min_score = min(scores)
    max_score = max(scores)
    average_score = sum(scores) / len(scores)
    # Sort the list of scores
    scores.sort()
    print("\n--- Score Summary ---")
    print(f"Minimum Score: {min_score}")
    print(f"Maximum Score: {max_score}")
    print(f"Average Score: {average_score:.2f}")
    print(f"Sorted Scores: {scores}")
    print("-"*21)
main()
